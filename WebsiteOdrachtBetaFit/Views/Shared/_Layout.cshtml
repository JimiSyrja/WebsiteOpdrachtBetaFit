@{
    string currentPage = Context.Request.RouteValues["action"].ToString().ToLower();
}

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - WebsiteOdrachtBetaFit</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/WebsiteOdrachtBetaFit.styles.css" asp-append-version="true" />
</head>
<body>
    <header>
        <nav class="navbar navbar-expand-sm navbar-toggleable-sm navbar-light bg-white border-bottom box-shadow mb-3">
            <div class="container-fluid">
                <a class="navbar-brand" asp-area="" asp-controller="Home" asp-action="Index"><img src= "Images/logo.png" alt = "test"></a>
                <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target=".navbar-collapse" aria-controls="navbarSupportedContent"
                        aria-expanded="false" aria-label="Toggle navigation">
                    <span class="navbar-toggler-icon"></span>
                </button>
                <div class="navbar-collapse collapse d-sm-inline-flex justify-content-between">
                    <ul class="navbar-nav flex-grow-1">
                        <li class="nav-item @(currentPage == "index" ? "active" : "")">
                            <a class="nav-link text-dark" asp-area="" asp-controller="Home" asp-action="Index">Home</a>
                        </li>
                        <li class="nav-item @(currentPage == "trainers" ? "active" : "")">
                            <a class="nav-link text-dark" asp-area="" asp-controller="Home" asp-action="Trainers">Trainers</a>
                        </li>
                        <li class="nav-item @(currentPage == "locatie" ? "active" : "")">
                            <a class="nav-link text-dark" asp-area="" asp-controller="Home" asp-action="Locatie">Locatie</a>
                        </li>
                        <li class="nav-item @(currentPage == "price" ? "active" : "")">
                            <a class="nav-link text-dark" asp-area="" asp-controller="Home" asp-action="Price">Price</a>
                        </li>
                        <li class="nav-item @(currentPage == "shop" ? "active" : "")">
                            <a class="nav-link text-dark" asp-area="" asp-controller="Home" asp-action="Shop">Shop</a>
                        </li>
                        <li class="nav-item @(currentPage == "contact" ? "active" : "")">
                            <a class="nav-link text-dark" asp-area="" asp-controller="Home" asp-action="Contact">Contact</a>
                        </li>
                        <li class="nav-item @(currentPage == "login" ? "active" : "")">
                            <a class="nav-link text-dark" asp-area="" asp-controller="Home" asp-action="Login">Login</a>
                        </li>
                    </ul>
                </div>
            </div>
              <div class="search-container">
              <form action="/Home/PageNotFound" method="get">
                <input type="text" class="search-input" name="searchTerm" placeholder="Zoeken...">
                <button class="search-button">Zoek</button>
                 </form>
                 </div>

            <button id="darkModeButton" class="dark-mode-button">
                <span class="inner-circle"></span>
            </button>

        </nav>
    </header>

  

    <div class="container">
        <main role="main" class="pb-3">
            @RenderBody()
        </main>
    </div>

    <footer class="border-top text-muted">
        
        <div class="container2">
            &copy; 2023 - BetaFit  <a asp-area="" asp-controller="Home"> </a>

        <!--    <div id="social-buttons">
    <a href="https://www.facebook.com/profile.php?id=100093364544556&sk=about " target="_blank">
      <img src="/Images/facebook.png" alt="Facebook">
    </a>

    <a href="https://www.twitter.com/Beta_Fit_" target="_blank">
      <img src="/Images/twitter1.png" alt="Twitter">
    </a>

    <a href="https://www.instagram.com/beta_fit_/" target="_blank">
      <img src="/Images/insta.png" alt="Instagram">
    </a>
     </div>--> 
        </div>
    
    </footer>
    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>