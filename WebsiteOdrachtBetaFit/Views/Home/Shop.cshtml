@*@model List<Product>
*@
@{
    ViewData["Title"] = "Shop";
}

<!DOCTYPE html>
<html lang="nl">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewData["Title"]</title>
    <link rel="stylesheet" href="css/Shop.css">
   </head>
<body>
    <div class="text-center">
        <h1 class="display-3">Sportschool Webshop</h1>
    </div>

    <main>
        <div class="product-list">
            <div class="product-item">
                <img src="/Images/advancedprotein.png" alt="Supplement 1" class="product-image">
                <h2>Advanced Protein</h2>
                <p>A high-quality protein supplement to support muscle growth and recovery.</p>
                <p>Price: €19.99</p>
                <button class="buy-button">Buy now</button>
            </div>
            <div class="product-item">
                <img src="/Images/preworkoutignite.png" alt="Supplement 2" class="product-image">
                <h2>Pre-Workout Ignite</h2>
                <p>A powerful pre-workout formula to enhance energy, focus, and performance.</p>
                <p>Price: €49.99</p>
                <button class="buy-button">Buy now</button>
            </div>
            <div class="product-item">
                <img src="/Images/multifitnessmachine.png" alt="Fitnessdevice 1" class="product-image">
                <h2>Multi Fitness Machine</h2>
                <p>A high-performance treadmill with various training programs and incline options.</p>
                <p>Price: €3099.99</p>
                <button class="buy-button">Buy now</button>
            </div>
            <div class="product-item">
                <img src="/Images/adjustabledumbbellset.png" alt="Fitnessdevice 2" class="product-image">
                <h2>Adjustable Dumbbell Set</h2>
                <p>A versatile dumbbell set with adjustable weights for strength training.</p>
                <p>Price: €149.99</p>
                <button class="buy-button">Buy now</button>
            </div>
        </div>
    </main>
</body>
</html>


